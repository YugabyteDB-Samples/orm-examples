<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="mybatis.mapper.OrderMapper">

	<insert id="save" useGeneratedKeys="true" keyProperty="order_id">
        insert into orders (order_total, user_id) values (#{orderTotal}, #{userId})
    </insert>
    
    <resultMap id="orderResultMap" type="Order">
        <id property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <association property="user"
                     column="user_id"
                     select="mybatis.mapper.UserMapper.findById"/>
    </resultMap>
    
    <select id="findById" resultMap="orderResultMap">
        select <include refid="allColumns"/> from orders where order_id = #{orderId}
    </select>
    
    <select id="findOrdersForUser" resultMap="orderResultMap">
        select <include refid="allColumns"/> from orders where user_id = #{userId}
    </select>
    
    <select id="findAll" resultMap="orderResultMap" fetchSize="10" flushCache="false" useCache="false" timeout="60000" statementType="PREPARED" resultSetType="FORWARD_ONLY">
        select <include refid="allColumns"/> from orders
    </select>
    
    <delete id="delete">
        delete from orders where order_id = #{orderId}
    </delete>
    
    
</mapper>    